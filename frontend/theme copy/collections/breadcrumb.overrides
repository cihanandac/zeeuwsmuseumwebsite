/* SECONDARY HEADER */
/* // ********BREADCRUMB*********** */

.ui.secondary.vertical {
  border: 0px;
  background-color: #ffffff;
  border-bottom: 1px solid #c3c3c3 !important;
}

#crumbcontainer {
  position: relative;
  display: flex;
  width: 100% !important;
  width: 100%;
  height: 60px;
  /* display: flex !important; */
  flex-direction: row;
  /* border-bottom: 1px solid #c3c3c3; */
}

#dropdowncontainer {
  width: 283px !important;
}

#inhoud {
  position: absolute;
  top: 0px;
  right: 0px;
  color: #000000;

  :hover {
    svg {
      fill: #7bb0e7 !important;
    }
  }

  .ui.item {
    padding: 22px 22px 15px !important; /* width: 50px; */
    svg {
      width: 12px;
      height: 12px;
      padding: 0% !important;
      /* padding-left: 6px !important; */
      /* padding-right: 2px !important; */
    }
  }
}

#dropdowncontainer {
  .divider.text {
    padding-right: 9px;
    color: #808080;
    font-size: 16px !important;
  }
}

.ui.breadcrumb .divider {
  margin: 0px !important;
}

.ui.secondary.vertical.segment.breadcrumbs {
  display: none;
  width: 100%;
  height: 60px;
  padding: 0%;
  border-bottom: 1px solid #c3c3c3;
}

div.ui.breadcrumb {
  height: 54px;
  padding-top: 20px;
  padding-bottom: 0%;
  color: #808080 !important;
  font-family: 'UniversLightCn', 'Helvetica Neue', Helvetica, sans-serif;
  font-size: 17px;
  /* padding-left: 300px; */
  letter-spacing: 0.1em;

  .parenttitle:hover {
    color: #7bb0e7 !important;
  }

  .divider {
    font-size: 15px;
    font-weight: 100;
  }

  svg path {
    width: 20px;
    height: 30px !important;
    color: #808080;
  }
}

.ui.breadcrumb .section.active {
  color: #808080 !important;
}

.ui.breadcrumb .section {
  margin-bottom: 10px;
  color: #000000 !important;
  text-align: center;
}

.view-viewview.contenttype-jaarverslag,
.view-viewview.contenttype-document,
.view-viewview.contenttype-folder,
.view-viewview.contenttype-slideshow {
  .ui.secondary.vertical.segment.breadcrumbs {
    display: block !important;
  }

  #inhoud {
    flex-grow: 0;
  }

  div.ui.breadcrumb {
    max-width: 1600px !important;
    flex-grow: 1;
    justify-content: center;
    padding-right: 15px;
    padding-left: 15px;
    /* width: 100% !important; */
  }
}

.ui.segment.content-area {
  padding-top: 0%;
  margin-top: 0%;
}

div#InhoudDropdown {
  /* min-width: 288px !important; */
  padding: 6px 29px !important;
  border: none;
  margin-top: 0px !important;
  margin-right: 0px !important;
  margin-bottom: 0px !important;
  background-color: #ffffff !important;
  color: #000000;
  font-size: 17px !important;
  letter-spacing: 1.7px !important;

  a {
    color: #000000;
    line-height: 20px !important;
  }

  a:hover {
    background-color: #ffffff !important;
    color: #7bb0e7;
  }
}

.dropdownContentPage {
  /* height: 320px !important; */
  box-sizing: content-box;

  a {
    padding: 6px 4px;
  }
}

#folderMap a,
#folderMap div {
  font-family: 'UniversCn';
  font-size: 16px;
  text-transform: uppercase !important;

  svg {
    width: 30px !important;
    height: 30px !important;

    path {
      width: 1px !important;
      height: 30px !important;
      fill: #c3c3c3 !important;
    }
  }
}

.breadtitle,
.parenttitle {
  display: flex;
  height: 30px !important;
  align-items: center;
  padding-right: 15px !important;
  padding-left: 10px !important;
}

.breaddivider {
  height: 30px !important;
  padding-right: 9px;
  padding-left: 5px;
}

.crumbcontainer {
  display: flex !important;

  a {
    color: #000000 !important;
    text-decoration: none !important;
  }
}

/* END OF SECONDARY HEADER */

@media only screen and (max-width: 1145px) {
  .ui.secondary.vertical.segment.breadcrumbs {
    height: 56px !important;
  }

  .ui.container.header-container {
    // height: 59px !important;
  }

  #crumbcontainer {
    height: 58px !important;
  }

  #inhoud .ui.item.simple.dropdown {
    height: 54px !important;
  }

  #inhoud {
    left: 0px !important;
    height: 55px !important;

    .menu {
      right: auto !important;
      left: 0px !important;
    }

    .ui.item {
      padding: 18px 22px 15px 37px !important;
    }
  }

  div.ui.breadcrumb {
    display: none !important;
  }

  #dropdownContentPage {
    width: 100% !important;
    padding-top: 0px !important;
    padding-bottom: 0px !important;
    border-top: white !important;

    a {
      padding-left: 47px !important;
    }
  }

  .menu.transition.dropdownContentPage {
    width: 100vw !important;
    padding-top: 10px !important;
    padding-bottom: 0px !important;
    border-top: white !important;

    a {
      padding-left: 47px !important;
    }
  }
}

@media only screen and (max-width: 767px) {
  #inhoud .ui.item {
    padding: 18px 22px 15px 22px !important;
  }
}


